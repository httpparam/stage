<div class="flex min-h-screen">
  <!-- Sidebar -->
  <aside class="fixed top-0 left-0 bottom-0 w-72 bg-mantle border-r border-surface0 flex flex-col z-40">
    <!-- Header -->
    <header class="h-16 px-6 flex items-center border-b border-surface0">
      <a class="flex-none font-bold text-2xl text-text" href="#">
        <span class="text-mauve">Stage</span>
      </a>
    </header>
    <!-- End Header -->

    <!-- Body -->
    <nav class="flex-1 overflow-y-auto px-4 py-6">
      <ul class="space-y-2">
        <!-- Home -->
        <li>
          <a class="flex items-center gap-x-3 py-3 px-4 text-sm text-text bg-surface0 rounded-lg" href="#">
            <svg class="size-5" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m3 9 9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/><polyline points="9 22 9 12 15 12 15 22"/></svg>
            Home
          </a>
        </li>

        <!-- Events -->
        <li>
          <a class="flex items-center gap-x-3 py-3 px-4 text-sm text-subtext0 hover:text-text hover:bg-surface0 rounded-lg transition-colors" href="#">
            <svg class="size-5" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="18" height="18" x="3" y="4" rx="2" ry="2"/><line x1="16" x2="16" y1="2" y2="6"/><line x1="8" x2="8" y1="2" y2="6"/><line x1="3" x2="21" y1="10" y2="10"/></svg>
            Events
            <span class="ms-auto py-0.5 px-2 text-xs bg-mauve text-crust rounded-full">3</span>
          </a>
        </li>

        <!-- Projects -->
        <li>
          <a class="flex items-center gap-x-3 py-3 px-4 text-sm text-subtext0 hover:text-text hover:bg-surface0 rounded-lg transition-colors" href="#">
            <svg class="size-5" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M15.5 2H8.6c-.4 0-.8.2-1.1.5-.3.3-.5.7-.5 1.1v12.8c0 .4.2.8.5 1.1.3.3.7.5 1.1.5h9.8c.4 0 .8-.2 1.1-.5.3-.3.5-.7.5-1.1V6.5L15.5 2z"/><path d="M3 7.6v12.8c0 .4.2.8.5 1.1.3.3.7.5 1.1.5h9.8"/><path d="M15 2v5h5"/></svg>
            Projects
          </a>
        </li>

        <!-- Leaderboard -->
        <li>
          <a class="flex items-center gap-x-3 py-3 px-4 text-sm text-subtext0 hover:text-text hover:bg-surface0 rounded-lg transition-colors" href="#">
            <svg class="size-5" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M6 9H4.5a2.5 2.5 0 0 1 0-5H6"/><path d="M18 9h1.5a2.5 2.5 0 0 0 0-5H18"/><path d="M4 22h16"/><path d="M10 14.66V17c0 .55-.47.98-.97 1.21C7.85 18.75 7 20.24 7 22"/><path d="M14 14.66V17c0 .55.47.98.97 1.21C16.15 18.75 17 20.24 17 22"/><path d="M18 2H6v7a6 6 0 0 0 12 0V2Z"/></svg>
            Leaderboard
          </a>
        </li>
      </ul>
    </nav>
    <!-- End Body -->

    <!-- Footer -->
    <footer class="p-4 border-t border-surface0">
      <div class="relative w-full" data-controller="dropdown">
        <button type="button" data-action="click->dropdown#toggle" class="w-full inline-flex items-center gap-x-3 p-3 text-start text-sm text-text rounded-lg hover:bg-surface0 focus:outline-none focus:bg-surface0 transition-colors">
          <div class="shrink-0 size-10 rounded-full bg-mauve flex items-center justify-center text-crust font-bold text-lg">
            <%= current_user.email.first.upcase %>
          </div>
          <div class="flex-1 min-w-0">
            <p class="font-semibold truncate"><%= current_user.display_name %></p>
            <p class="text-xs text-subtext0 truncate"><%= current_user.email %></p>
          </div>
          <svg class="shrink-0 size-4 text-subtext0" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m7 15 5 5 5-5"/><path d="m7 9 5-5 5 5"/></svg>
        </button>

        <!-- Dropdown Menu -->
        <div data-dropdown-target="menu" class="hidden absolute bottom-full left-0 right-0 mb-2 bg-surface0 border border-surface2 rounded-xl shadow-xl overflow-hidden">
          <div class="p-2">
            <a href="<%= profile_path %>" class="w-full flex items-center gap-x-3 py-2.5 px-3 rounded-lg text-sm text-text hover:bg-surface1 transition-colors">
              <svg class="size-5" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M19 21v-2a4 4 0 0 0-4-4H9a4 4 0 0 0-4 4v2"/><circle cx="12" cy="7" r="4"/></svg>
              Profile
            </a>
            <%= button_to session_path, method: :delete, class: "w-full flex items-center gap-x-3 py-2.5 px-3 rounded-lg text-sm text-red hover:bg-surface1 transition-colors" do %>
              <svg class="size-5" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"/><polyline points="16 17 21 12 16 7"/><line x1="21" x2="9" y1="12" y2="12"/></svg>
              Sign out
            <% end %>
          </div>
        </div>
      </div>
    </footer>
    <!-- End Footer -->
  </aside>
  <!-- End Sidebar -->

  <!-- Main Content -->
  <main class="flex-1 ml-72 p-8">
    <div class="max-w-6xl">
      <!-- Welcome Section -->
      <div class="mb-10">
        <h1 class="text-3xl font-bold text-text">Welcome back, <%= current_user.display_name %>!</h1>
        <p class="mt-2 text-subtext0">Here's what's happening with your peer voting platform.</p>
      </div>

      <!-- Stats Grid -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-10">
        <div class="bg-surface0 rounded-2xl p-6 border border-surface2">
          <div class="flex items-center gap-4">
            <div class="size-14 rounded-xl bg-mauve/20 flex items-center justify-center">
              <svg class="size-7 text-mauve" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"/><circle cx="9" cy="7" r="4"/><path d="M22 21v-2a4 4 0 0 0-3-3.87"/><path d="M16 3.13a4 4 0 0 1 0 7.75"/></svg>
            </div>
            <div>
              <p class="text-3xl font-bold text-text">128</p>
              <p class="text-sm text-subtext0">Total Voters</p>
            </div>
          </div>
        </div>

        <div class="bg-surface0 rounded-2xl p-6 border border-surface2">
          <div class="flex items-center gap-4">
            <div class="size-14 rounded-xl bg-green/20 flex items-center justify-center">
              <svg class="size-7 text-green" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/><polyline points="22 4 12 14.01 9 11.01"/></svg>
            </div>
            <div>
              <p class="text-3xl font-bold text-text">45</p>
              <p class="text-sm text-subtext0">Projects Submitted</p>
            </div>
          </div>
        </div>

        <div class="bg-surface0 rounded-2xl p-6 border border-surface2">
          <div class="flex items-center gap-4">
            <div class="size-14 rounded-xl bg-peach/20 flex items-center justify-center">
              <svg class="size-7 text-peach" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="18" height="18" x="3" y="4" rx="2" ry="2"/><line x1="16" x2="16" y1="2" y2="6"/><line x1="8" x2="8" y1="2" y2="6"/><line x1="3" x2="21" y1="10" y2="10"/></svg>
            </div>
            <div>
              <p class="text-3xl font-bold text-text">3</p>
              <p class="text-sm text-subtext0">Active Events</p>
            </div>
          </div>
        </div>
      </div>

      <!-- Recent Activity -->
      <div class="bg-surface0 rounded-2xl border border-surface2 overflow-hidden">
        <div class="px-6 py-5 border-b border-surface2">
          <h2 class="text-lg font-semibold text-text">Recent Activity</h2>
        </div>
        <div class="divide-y divide-surface2">
          <div class="px-6 py-5 flex items-center gap-4">
            <div class="size-11 rounded-full bg-pink/20 flex items-center justify-center">
              <svg class="size-5 text-pink" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M19 14c1.49-1.46 3-3.21 3-5.5A5.5 5.5 0 0 0 16.5 3c-1.76 0-3 .5-4.5 2-1.5-1.5-2.74-2-4.5-2A5.5 5.5 0 0 0 2 8.5c0 2.3 1.5 4.05 3 5.5l7 7Z"/></svg>
            </div>
            <div class="flex-1">
              <p class="text-sm text-text"><span class="font-medium">Sarah</span> voted for <span class="font-medium text-mauve">AI Dashboard Project</span></p>
              <p class="text-xs text-subtext0 mt-1">2 minutes ago</p>
            </div>
          </div>
          <div class="px-6 py-5 flex items-center gap-4">
            <div class="size-11 rounded-full bg-blue/20 flex items-center justify-center">
              <svg class="size-5 text-blue" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M15.5 2H8.6c-.4 0-.8.2-1.1.5-.3.3-.5.7-.5 1.1v12.8c0 .4.2.8.5 1.1.3.3.7.5 1.1.5h9.8c.4 0 .8-.2 1.1-.5.3-.3.5-.7.5-1.1V6.5L15.5 2z"/><path d="M3 7.6v12.8c0 .4.2.8.5 1.1.3.3.7.5 1.1.5h9.8"/><path d="M15 2v5h5"/></svg>
            </div>
            <div class="flex-1">
              <p class="text-sm text-text"><span class="font-medium">Alex</span> submitted a new project <span class="font-medium text-mauve">E-commerce Platform</span></p>
              <p class="text-xs text-subtext0 mt-1">15 minutes ago</p>
            </div>
          </div>
          <div class="px-6 py-5 flex items-center gap-4">
            <div class="size-11 rounded-full bg-yellow/20 flex items-center justify-center">
              <svg class="size-5 text-yellow" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M6 9H4.5a2.5 2.5 0 0 1 0-5H6"/><path d="M18 9h1.5a2.5 2.5 0 0 0 0-5H18"/><path d="M4 22h16"/><path d="M10 14.66V17c0 .55-.47.98-.97 1.21C7.85 18.75 7 20.24 7 22"/><path d="M14 14.66V17c0 .55.47.98.97 1.21C16.15 18.75 17 20.24 17 22"/><path d="M18 2H6v7a6 6 0 0 0 12 0V2Z"/></svg>
            </div>
            <div class="flex-1">
              <p class="text-sm text-text"><span class="font-medium">Jordan</span> reached <span class="font-medium text-yellow">#1</span> on the leaderboard</p>
              <p class="text-xs text-subtext0 mt-1">1 hour ago</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
  <!-- End Main Content -->
</div>
