<div class="max-w-2xl">
  <div class="mb-10">
    <h1 class="text-3xl font-bold text-text">Complete Your Profile</h1>
    <p class="mt-2 text-subtext0">Please fill in your information to get started</p>
  </div>

  <div class="bg-surface0 rounded-2xl border border-surface2 overflow-hidden">
    <%= form_with model: current_user, url: profile_path, method: :patch, class: "p-6" do |f| %>
      <% if current_user.errors.any? %>
        <div class="mb-6 p-4 rounded-lg bg-red/20 border border-red/30">
          <% current_user.errors.full_messages.each do |message| %>
            <p class="text-sm text-red"><%= message %></p>
          <% end %>
        </div>
      <% end %>

      <div class="space-y-6">
        <div>
          <%= f.label :first_name, class: "block text-sm font-medium text-text mb-2" %>
          <span class="text-mauve">*</span>
          <%= f.text_field :first_name, class: "w-full rounded-lg bg-surface1 px-4 py-3 text-text border border-surface2 focus:outline-2 focus:-outline-offset-2 focus:outline-mauve", placeholder: "Enter your first name", required: true %>
        </div>

        <div>
          <%= f.label :last_name, class: "block text-sm font-medium text-text mb-2" %>
          <%= f.text_field :last_name, class: "w-full rounded-lg bg-surface1 px-4 py-3 text-text border border-surface2 focus:outline-2 focus:-outline-offset-2 focus:outline-mauve", placeholder: "Enter your last name" %>
        </div>

        <div>
          <%= f.label :age, "Age", class: "block text-sm font-medium text-text mb-2" %>
          <span class="text-mauve">*</span>
          <%= f.number_field :age, class: "w-full rounded-lg bg-surface1 px-4 py-3 text-text border border-surface2 focus:outline-2 focus:-outline-offset-2 focus:outline-mauve", placeholder: "Enter your age", min: 1, max: 149, required: true %>
        </div>

        <div>
          <%= f.label :email, class: "block text-sm font-medium text-text mb-2" %>
          <%= f.email_field :email, disabled: true, class: "w-full rounded-lg bg-surface2 px-4 py-3 text-subtext0 border border-surface2 cursor-not-allowed" %>
          <p class="mt-1 text-xs text-subtext0">Email cannot be changed</p>
        </div>
      </div>

      <div class="mt-8 flex items-center gap-4">
        <%= f.submit "Continue", class: "inline-flex items-center gap-x-2 py-2.5 px-6 rounded-lg text-sm font-semibold bg-mauve text-crust hover:bg-pink transition-colors" %>
      </div>
    <% end %>
  </div>
</div>
