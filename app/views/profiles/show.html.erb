<div class="max-w-2xl">
  <div class="mb-10">
    <h1 class="text-3xl font-bold text-text">Profile</h1>
    <p class="mt-2 text-subtext0">Manage your account information</p>
  </div>

  <div class="bg-surface0 rounded-2xl border border-surface2 overflow-hidden">
    <%# Profile Header %>
    <div class="px-6 py-8 border-b border-surface2 flex items-center gap-6">
      <div class="size-20 rounded-full bg-mauve flex items-center justify-center text-crust font-bold text-3xl">
        <%= current_user.email.first.upcase %>
      </div>
      <div>
        <h2 class="text-xl font-semibold text-text"><%= current_user.display_name %></h2>
        <p class="text-subtext0"><%= current_user.email %></p>
      </div>
    </div>

    <%# Profile Info %>
    <div class="p-6">
      <div class="space-y-4">
        <div class="flex justify-between items-center py-3 border-b border-surface2">
          <div>
            <p class="text-sm text-subtext0">First Name</p>
            <p class="text-text"><%= current_user.first_name.present? ? current_user.first_name : "Not set" %></p>
          </div>
        </div>
        <div class="flex justify-between items-center py-3 border-b border-surface2">
          <div>
            <p class="text-sm text-subtext0">Last Name</p>
            <p class="text-text"><%= current_user.last_name.present? ? current_user.last_name : "Not set" %></p>
          </div>
        </div>
        <div class="flex justify-between items-center py-3 border-b border-surface2">
          <div>
            <p class="text-sm text-subtext0">Age</p>
            <p class="text-text"><%= current_user.age.present? ? current_user.age : "Not set" %></p>
          </div>
        </div>
        <div class="flex justify-between items-center py-3">
          <div>
            <p class="text-sm text-subtext0">Email</p>
            <p class="text-text"><%= current_user.email %></p>
          </div>
        </div>
      </div>

      <div class="mt-8">
        <%= link_to "Edit Profile", edit_profile_path, class: "inline-flex items-center gap-x-2 py-2.5 px-4 rounded-lg text-sm font-semibold bg-mauve text-crust hover:bg-pink transition-colors" %>
      </div>
    </div>
  </div>
</div>
