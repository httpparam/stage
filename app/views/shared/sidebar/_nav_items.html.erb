<ul class="space-y-2">
  <%# Home %>
  <li>
    <a class="flex items-center gap-x-3 py-3 px-4 text-sm <%= request.path == dashboard_path ? "text-text bg-surface0" : "text-subtext0 hover:text-text hover:bg-surface0" %> rounded-lg transition-colors" href="<%= dashboard_path %>">
      <svg class="size-5" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m3 9 9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/><polyline points="9 22 9 12 15 12 15 22"/></svg>
      Home
    </a>
  </li>

  <%# Events %>
  <li>
    <a class="flex items-center gap-x-3 py-3 px-4 text-sm <%= request.path.start_with?(events_path) ? "text-text bg-surface0" : "text-subtext0 hover:text-text hover:bg-surface0" %> rounded-lg transition-colors" href="<%= events_path %>">
      <svg class="size-5" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="18" height="18" x="3" y="4" rx="2" ry="2"/><line x1="16" x2="16" y1="2" y2="6"/><line x1="8" x2="8" y1="2" y2="6"/><line x1="3" x2="21" y1="10" y2="10"/></svg>
      Events
      <% event_count = current_user.participated_events.count %>
      <% if event_count > 0 %>
        <span class="ms-auto py-0.5 px-2 text-xs bg-mauve text-crust rounded-full"><%= event_count %></span>
      <% end %>
    </a>
  </li>

  <%# Projects %>
  <li>
    <a class="flex items-center gap-x-3 py-3 px-4 text-sm text-subtext0 hover:text-text hover:bg-surface0 rounded-lg transition-colors" href="#">
      <svg class="size-5" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M15.5 2H8.6c-.4 0-.8.2-1.1.5-.3.3-.5.7-.5 1.1v12.8c0 .4.2.8.5 1.1.3.3.7.5 1.1.5h9.8c.4 0 .8-.2 1.1-.5.3-.3.5-.7.5-1.1V6.5L15.5 2z"/><path d="M3 7.6v12.8c0 .4.2.8.5 1.1.3.3.7.5 1.1.5h9.8"/><path d="M15 2v5h5"/></svg>
      Projects
    </a>
  </li>

  <%# Leaderboard %>
  <li>
    <a class="flex items-center gap-x-3 py-3 px-4 text-sm text-subtext0 hover:text-text hover:bg-surface0 rounded-lg transition-colors" href="#">
      <svg class="size-5" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M6 9H4.5a2.5 2.5 0 0 1 0-5H6"/><path d="M18 9h1.5a2.5 2.5 0 0 0 0-5H18"/><path d="M4 22h16"/><path d="M10 14.66V17c0 .55-.47.98-.97 1.21C7.85 18.75 7 20.24 7 22"/><path d="M14 14.66V17c0 .55.47.98.97 1.21C16.15 18.75 17 20.24 17 22"/><path d="M18 2H6v7a6 6 0 0 0 12 0V2Z"/></svg>
      Leaderboard
    </a>
  </li>
</ul>
