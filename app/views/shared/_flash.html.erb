<div id="flash" class="fixed top-4 left-1/2 -translate-x-1/2 z-50">
  <% if notice %>
    <div class="rounded-md bg-green/20 border border-green/30 px-4 py-3 text-sm text-green">
      <%= notice %>
    </div>
  <% elsif alert %>
    <div class="rounded-md bg-red/20 border border-red/30 px-4 py-3 text-sm text-red">
      <%= alert %>
    </div>
  <% end %>
</div>
