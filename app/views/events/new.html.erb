<% content_for :title, "New Event" %>

<div class="max-w-2xl">
  <div class="mb-10">
    <h1 class="text-3xl font-bold text-text">Create New Event</h1>
    <p class="mt-2 text-subtext0">Set up a new peer voting event</p>
  </div>

  <div class="bg-surface0 rounded-2xl border border-surface2 overflow-hidden">
    <%= form_with model: @event, class: "p-6" do |f| %>
      <% if @event.errors.any? %>
        <div class="mb-6 p-4 rounded-lg bg-red/20 border border-red/30">
          <% @event.errors.full_messages.each do |message| %>
            <p class="text-sm text-red"><%= message %></p>
          <% end %>
        </div>
      <% end %>

      <div class="space-y-6">
        <div>
          <%= f.label :name, class: "block text-sm font-medium text-text mb-2" %>
          <span class="text-mauve">*</span>
          <%= f.text_field :name, class: "w-full rounded-lg bg-surface1 px-4 py-3 text-text border border-surface2 focus:outline-2 focus:-outline-offset-2 focus:outline-mauve", placeholder: "e.g., Q1 Hackathon 2026", required: true %>
        </div>

        <div>
          <%= f.label :description, class: "block text-sm font-medium text-text mb-2" %>
          <%= f.text_area :description, rows: 3, class: "w-full rounded-lg bg-surface1 px-4 py-3 text-text border border-surface2 focus:outline-2 focus:-outline-offset-2 focus:outline-mauve", placeholder: "Describe your event..." %>
        </div>

        <div>
          <%= f.label :event_date, "Event Date", class: "block text-sm font-medium text-text mb-2" %>
          <span class="text-mauve">*</span>
          <%= f.date_field :event_date, class: "w-full rounded-lg bg-surface1 px-4 py-3 text-text border border-surface2 focus:outline-2 focus:-outline-offset-2 focus:outline-mauve", required: true %>
        </div>
      </div>

      <div class="mt-8 flex items-center gap-4">
        <%= f.submit "Create Event", class: "inline-flex items-center gap-x-2 py-2.5 px-6 rounded-lg text-sm font-semibold bg-mauve text-crust hover:bg-pink transition-colors" %>
        <%= link_to "Cancel", events_path, class: "text-sm text-subtext0 hover:text-text transition-colors" %>
      </div>
    <% end %>
  </div>
</div>
