<div class="flex min-h-full flex-col justify-center px-6 py-12 lg:px-8 pt-[20vh]">
  <div class="sm:mx-auto sm:w-full sm:max-w-sm">
    <h2 class="mt-10 text-center text-2xl/9 font-bold tracking-tight text-text">Welcome to Stage</h2>
    <p class="mt-2 text-center text-sm text-subtext0">Enter your email to receive a sign-in code</p>
  </div>

  <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">
    <%= form_with url: session_path, method: :post, data: { turbo: true }, local: true do |f| %>
      <div>
        <label for="email" class="block text-sm/6 font-medium text-text">Email address</label>
        <div class="mt-2">
          <%= f.email_field :email,
              placeholder: "you@example.com",
              required: true,
              autofocus: true,
              autocomplete: "email",
              class: "block w-full rounded-md bg-surface0 px-3 py-1.5 text-base text-text outline-1 -outline-offset-1 outline-surface2 placeholder:text-overlay0 focus:outline-2 focus:-outline-offset-2 focus:outline-mauve sm:text-sm/6" %>
        </div>
      </div>

      <div class="mt-6">
        <%= f.submit "Send code", class: "flex w-full justify-center rounded-md bg-mauve px-3 py-1.5 text-sm/6 font-semibold text-crust hover:bg-pink focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-mauve transition-colors" %>
      </div>
    <% end %>
  </div>
</div>
